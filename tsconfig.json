{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@Interface/*": ["src/interface/*"],
      "@Domain/*": ["src/domain/*"],
      "@Application/*": ["src/application/*"],
      "@Infrastructure/*": ["src/infrastructure/*"],
    }
  }
}
